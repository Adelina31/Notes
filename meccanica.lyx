\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
E_{C_{m}}=\frac{1}{2}J_{m}^{*}\omega_{m}^{2}
\]

\end_inset

 quindi:
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
M_{m}^{*}\omega_{m}-W_{1}=J_{m}^{*}\omega_{m}\dot{\omega}_{m}
\]

\end_inset

 
\begin_inset Formula 
\[
W_{1}=M_{m}^{*}\omega_{m}-J_{m}^{*}\omega_{m}\dot{\omega}_{m}
\]

\end_inset

 Infine la 
\begin_inset Formula $W_{p}$
\end_inset

 è pari a:
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
W_{p}=-\left(1-\eta_{D}\right)W_{1}=-\left(1-\eta_{D}\right)\left(M_{m}^{*}\omega_{m}-J_{m}^{*}\omega_{m}\dot{\omega}_{m}\right)
\]

\end_inset


\end_layout

\begin_layout Subsection
Moto retrogrado
\end_layout

\begin_layout Standard
Nel caso di moto retrogrado si ha la potenza 
\begin_inset Formula $W_{2}>0$
\end_inset

 e di conseguenza la 
\begin_inset Formula $W_{1}<0$
\end_inset

.
\end_layout

\begin_layout Standard
Quindi:
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
W_{2}=-\left(W_{p}+W_{1}\right)
\]

\end_inset


\end_layout

\begin_layout Standard
Introducendo il rendimento di moto retrogrado:
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\eta_{R}=-\frac{W_{1}}{W_{2}}=\frac{\left|W_{1}\right|}{\left|W_{2}\right|}
\]

\end_inset

 la potenza persa vale:
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
W_{p}=-\left(W_{1}+W_{2}\right)=-\left(-\eta_{R}W_{2}+W_{2}\right)=-\left(1-\eta_{R}\right)W_{2}
\]

\end_inset


\end_layout

